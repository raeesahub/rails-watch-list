<%= link_to 'Back to all lists', lists_path, class: 'btn btn-primary btn-sm'  %>

<%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-primary btn-sm float-right' %>

<h1 class='text-center mb-4'><%= @list.name %></h1>
<div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card-trip">
    <img src=<%= bookmark.movie.poster_url %> />
    <div class="card-trip-infos">
      <div>
        <h2><%= bookmark.movie.title %><%= link_to bookmark_path(bookmark), method: :delete do %>
          <i class="far fa-trash-alt"></i>
          <% end %>
        </h2>
        <p class="mt-2"><%= bookmark.movie.overview %></p>
        <p class="comment"><%= bookmark.comment %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>


